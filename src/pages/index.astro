---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION, GITHUB_URL, LINKEDIN_URL, EMAIL, RESUME_URL } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

// ── nothing to configure here — see about.astro for profile data ──────────
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image="/og-home.png" />
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1" class="w-full max-w-[760px] box-border mx-auto px-[1.5em] pt-[2em] pb-[4em]">

			<!-- ── Hero ───────────────────────────────────────────────── -->
			<section class="hero pt-[4em] pb-[3em] border-b border-[var(--c-border)]">
				<div>
					<h1 class="text-5xl">Aman Sanoj</h1>
					<p class="text-[1.1em] text-[var(--c-warm)] mt-0 mb-[1em]">Developer &amp; Student</p>
					<p class="text-[var(--c-text-muted)] max-w-[520px] leading-[1.7] mt-0 mb-[1.5em]">
						I build things for the web. Passionate about clean code, open source,
						and learning something new every day.
					</p>
					<div class="flex gap-[0.75em] mb-[1.5em] flex-wrap">
						<a href="/about" class="btn primary">About Me</a>
						<a href={RESUME_URL} class="btn secondary" download>Resume</a>
						<a href={`mailto:${EMAIL}`} class="btn secondary">Get in Touch</a>
					</div>
					<div class="flex gap-4">
						<a href={GITHUB_URL} target="_blank" rel="noopener" aria-label="GitHub" class="text-[var(--c-text-muted)] transition-colors duration-150 flex items-center hover:text-[var(--c-warm)]">
							<i class="ph-fill ph-github-logo text-[1.4rem]"></i>
						</a>
						<a href={LINKEDIN_URL} target="_blank" rel="noopener" aria-label="LinkedIn" class="text-[var(--c-text-muted)] transition-colors duration-150 flex items-center hover:text-[var(--c-warm)]">
							<i class="ph-fill ph-linkedin-logo text-[1.4rem]"></i>
						</a>
						<a href={`mailto:${EMAIL}`} aria-label="Email" class="text-[var(--c-text-muted)] transition-colors duration-150 flex items-center hover:text-[var(--c-warm)]">
							<i class="ph-fill ph-envelope-simple text-[1.4rem]"></i>
						</a>
					</div>
				</div>
			</section>

			<!-- ── Latest Posts ───────────────────────────────────────── -->
			<section class="section" id="blog">
				<h2>Latest Posts</h2>
				<ul class="post-list list-none p-0 mb-4 flex flex-col gap-2">
					{posts.map(post => (
						<li>
							<a href={`/blog/${post.id}/`} class="post-entry flex justify-between items-baseline gap-4 no-underline py-[0.6em] border-b border-[var(--c-border)] text-inherit">
								<span class="post-title">{post.data.title}</span>
								<span class="text-[0.85em] text-[var(--c-text-muted)] whitespace-nowrap"><FormattedDate date={post.data.pubDate} /></span>
							</a>
						</li>
					))}
				</ul>
				<a href="/blog" class="view-all">All posts <i class="ph-fill ph-arrow-right"></i></a>
			</section>

		</main>
		<Footer />
	</body>
</html>

<style>
	/* descendant hover — can't express as Tailwind utility */
	.post-entry:hover .post-title { color: var(--c-warm); }

	/* max-width responsive — Tailwind is mobile-first so these must stay in CSS */
	@media (max-width: 600px) {
		main { padding: 1.5em 1em 3em; }
		.hero { padding-top: 2.5em; padding-bottom: 2em; }
		.hero h1 { font-size: 2.2em; }
		.post-entry { flex-direction: column; gap: 0.15em; }
	}
	@media (max-width: 400px) {
		.hero h1 { font-size: 1.9em; }
	}
</style>
