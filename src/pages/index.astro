---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION, GITHUB_URL, LINKEDIN_URL, EMAIL, RESUME_URL } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

// ── nothing to configure here — see about.astro for profile data ──────────
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image="/og-home.png" />
	</head>
	<body>
		<Header />
<main id="main-content" tabindex="-1">

			<!-- ── Hero ───────────────────────────────────────────────── -->
			<section class="hero">
				<div class="hero-text">
					<h1>Aman Sanoj</h1>
					<p class="role">Developer &amp; Student</p>
					<p class="bio">
						I build things for the web. Passionate about clean code, open source,
						and learning something new every day.
					</p>
					<div class="hero-actions">
						<a href="/about" class="btn primary">About Me</a>
						<a href={RESUME_URL} class="btn secondary" download>Resume</a>
						<a href={`mailto:${EMAIL}`} class="btn secondary">Get in Touch</a>
					</div>
					<div class="social-row">
						<a href={GITHUB_URL} target="_blank" rel="noopener" aria-label="GitHub">
							<i class="ph-fill ph-github-logo"></i>
						</a>
						<a href={LINKEDIN_URL} target="_blank" rel="noopener" aria-label="LinkedIn">
							<i class="ph-fill ph-linkedin-logo"></i>
						</a>
						<a href={`mailto:${EMAIL}`} aria-label="Email">
							<i class="ph-fill ph-envelope-simple"></i>
						</a>
					</div>
				</div>
			</section>

			<!-- ── Latest Posts ───────────────────────────────────────── -->
			<section class="section" id="blog">
				<h2>Latest Posts</h2>
				<ul class="post-list">
					{posts.map(post => (
						<li>
							<a href={`/blog/${post.id}/`}>
								<span class="post-title">{post.data.title}</span>
								<span class="post-date"><FormattedDate date={post.data.pubDate} /></span>
							</a>
						</li>
					))}
				</ul>
				<a href="/blog" class="view-all">All posts <i class="ph-fill ph-arrow-right"></i></a>
			</section>

		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 760px;
		width: 100%;
		box-sizing: border-box;
		margin: 0 auto;
		padding: 2em 1.5em 4em;
	}

	/* ── Hero ───────────────────────────────────────────── */
	.hero {
		padding: 4em 0 3em;
		border-bottom: 1px solid var(--c-border);
	}
	.role {
		font-size: 1.1em;
		color: var(--c-warm);
		margin: 0 0 1em;
	}
	.bio {
		font-size: 1em;
		color: var(--c-text-muted);
		max-width: 520px;
		line-height: 1.7;
		margin: 0 0 1.5em;
	}
	.hero-actions {
		display: flex;
		gap: 0.75em;
		margin-bottom: 1.5em;
		flex-wrap: wrap;
	}
	.social-row {
		display: flex;
		gap: 1em;
	}
	.social-row a {
		color: var(--c-text-muted);
		transition: color 0.15s;
		display: flex;
		align-items: center;
	}
	.social-row a i { font-size: 1.4rem; }
	.social-row a:hover { color: var(--c-warm); }

	/* ── Blog posts ─────────────────────────────────────── */
	.post-list {
		list-style: none;
		padding: 0;
		margin: 0 0 1em;
		display: flex;
		flex-direction: column;
		gap: 0.5em;
	}
	.post-list li a {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		gap: 1em;
		text-decoration: none;
		padding: 0.6em 0;
		border-bottom: 1px solid var(--c-border);
		color: inherit;
	}
	.post-list li a:hover .post-title { color: var(--c-warm); }
	.post-title { }
	.post-date { font-size: 0.85em; color: var(--c-text-muted); white-space: nowrap; }

	@media (max-width: 600px) {
		main { padding: 1.5em 1em 3em; }
		.hero { padding: 2.5em 0 2em; }
		.hero h1 { font-size: 2.2em; }
		.hero-actions { gap: 0.5em; }
		.post-list li a { flex-direction: column; gap: 0.15em; }
	}
	@media (max-width: 400px) {
		.hero h1 { font-size: 1.9em; }
		.btn { padding: 0.5em 1em; font-size: 0.85em; }
	}
</style>
