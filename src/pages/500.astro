---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<BaseHead title="500 — Aman Sanoj" description="Something went wrong on our end." noindex image="/og-home.png" />
		<style>
			main {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: flex-start;
				min-height: 60vh;
				text-align: center;
				padding: 4em 1rem 3em;
			}

			.code {
				font-size: 6rem;
				font-weight: 700;
				line-height: 1;
				color: var(--accent);
				margin: 0;
			}
			.message {
				font-size: 1.1rem;
				color: rgb(var(--gray));
				margin: 0.4em 0 0.25em;
			}
			.sub {
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin: 0 0 1.2em;
				opacity: 0.7;
			}
			.home-link {
				display: inline-block;
				padding: 0.5em 1.4em;
				background: var(--accent);
				color: #fff;
				text-decoration: none;
				border-radius: 6px;
				font-size: 0.95rem;
				font-weight: 600;
				transition: background 0.15s;
			}
			.home-link:hover { background: var(--accent-dark); }
		</style>
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1">
			<p class="code">500</p>
			<p class="message">something broke on my end.</p>
			<p class="sub">it's not you — i'll look into it.</p>
			<a class="home-link" href="/">Go home</a>
		</main>
		<Footer />
	</body>
</html>
