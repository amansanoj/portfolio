---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<BaseHead title="500 - Aman Sanoj" description="Something went wrong on our end." noindex image="/og-home.png" />
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1" class="flex flex-col items-center justify-start min-h-[60vh] text-center px-4 pt-[4em] pb-[3em]">
			<p class="text-[6rem] leading-[1] text-[var(--c-warm)] m-0">500</p>
			<p class="text-[1.1rem] text-[var(--c-text-muted)] mt-[0.4em] mb-[0.25em]">something broke on my end.</p>
			<p class="text-[0.9rem] text-[var(--c-text-muted)] mt-0 mb-[1.2em] opacity-70">it's not you - i'll look into it.</p>
			<a href="/" class="inline-block px-[1.4em] py-[0.5em] bg-[var(--c-accent)] text-white no-underline rounded-[6px] text-[0.95rem] transition-colors duration-150 hover:bg-[var(--c-accent-dark)]">Go home</a>
		</main>
		<Footer />
	</body>
</html>
