---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Blog - Aman Sanoj" description={SITE_DESCRIPTION} image="/og-home.png" />
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1" class="w-full max-w-[900px] box-border mx-auto px-[1.5em] pt-[2em] pb-[4em]">
			<p class="mb-[1.5em] text-[0.85em]"><a href="/rss.xml" class="inline-flex items-center gap-[0.3em] text-[var(--c-text-muted)] no-underline hover:text-[var(--c-warm)]"><i class="ph-fill ph-rss"></i> RSS feed</a></p>
			<section>
				<ul class="post-grid">
					{
						posts.map((post, index) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img 
										width={720} 
										height={360} 
										src={post.data.heroImage} 
										alt="" 
										loading={index === 0 ? "eager" : "lazy"}
										fetchpriority={index === 0 ? "high" : "auto"}
										decoding="async"
									/>
									<h4 class="title text-xl">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	@media (max-width: 480px) {
		main { padding: 1.5em 1em 3em; }
	}
</style>
