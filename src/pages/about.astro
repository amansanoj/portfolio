		credentialId: '556FB6FA14D4',
		url: 'https://www.hackerrank.com/certificates/556FB6FA14D4',
	},
];

const languages = [
	{ lang: 'English', level: 'Bilingual', dots: 5 },
	{ lang: 'Malayalam', level: 'Native', dots: 5 },
	{ lang: 'Hindi', level: 'Proficient', dots: 4 },
	{ lang: 'French', level: 'Basic', dots: 2 },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="About — Aman Sanoj" description="Developer & Student based in Dubai." />
	</head>
	<body>
		<Header />
		<main id="main-content">

			<!-- ── Bio ─────────────────────────────────────────────── -->
			<section class="bio-section">
				<h1>About Me</h1>
				<p>
					Hey, I'm Aman — a developer and student who enjoys building things for the web.
					I'm currently studying and working on personal projects that keep me learning.
				</p>
				<p>
					I care about writing clean, readable code and I'm always looking to pick up new skills.
					When I'm not coding, I write about what I'm learning on my blog.
				</p>
				<div class="contact-links">
					<a href={GITHUB_URL} target="_blank" rel="noopener"><i class="ph-fill ph-github-logo"></i> GitHub</a>
					<a href={LINKEDIN_URL} target="_blank" rel="noopener"><i class="ph-fill ph-linkedin-logo"></i> LinkedIn</a>
					<a href={`mailto:${EMAIL}`}><i class="ph-fill ph-envelope-simple"></i> Email</a>
					<a href={RESUME_URL} download><i class="ph-fill ph-file-arrow-down"></i> Resume</a>
				</div>
			</section>

			<!-- ── Skills ───────────────────────────────────────────── -->
			<section class="section" id="skills">
				<h2>Skills</h2>
				<div class="skills-grid">
					{skills.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</section>

			<!-- ── Experience ───────────────────────────────────────── -->
			<section class="section" id="experience">
				<h2>Experience</h2>
				<div class="exp-list">
					{experience.map(e => (
						<div class="exp-item">
							<div class="exp-row">
								<div>
									<strong>{e.role}</strong>
									<span class="exp-company">
										&nbsp;—&nbsp;
										{e.url && <a href={e.url} target="_blank" rel="noopener">{e.company} <i class="ph-fill ph-arrow-up-right"></i></a>}
										{!e.url && e.company}
									</span>
								</div>
								<span class="exp-meta">{e.period}</span>
							</div>
							<p class="exp-location"><i class="ph-fill ph-map-pin"></i> {e.location}</p>
						</div>
					))}
				</div>
			</section>

			<!-- ── Projects ───────────────────────────────────────────── -->
			<section class="section" id="projects">
				<h2>Projects</h2>
				<div class="projects-grid">
					{projects.map(p => (
						<div class="project-card">
							<div class="project-card-header">
								<h3>{p.name}</h3>
								{p.period && <span class="project-period">{p.period}</span>}
							</div>
							<p>{p.description}</p>
							<div class="tech-tags">
								{p.tech.map(t => <span class="tech-tag">{t}</span>)}
							</div>
							<div class="project-links">
								<a href={p.github} target="_blank" rel="noopener">GitHub <i class="ph-fill ph-arrow-up-right"></i></a>
								{p.live && <a href={p.live} target="_blank" rel="noopener">Live <i class="ph-fill ph-arrow-up-right"></i></a>}
								{p.caseStudy && <a href={p.caseStudy}>Case Study <i class="ph-fill ph-arrow-right"></i></a>}
							</div>
						</div>
					))}
				</div>
			</section>

			<!-- ── Education ───────────────────────────────────────────── -->
			<section class="section" id="education">
				<h2>Education</h2>
				<div class="edu-list">
					{education.map(e => (
						<div class="edu-item">
							<div class="edu-row">
								<strong>{e.school}</strong>
								<span class="edu-year">{e.year}</span>
							</div>
							<p class="edu-degree">{e.degree}</p>
							<p class="edu-subjects">{e.subjects}</p>
							{e.location && <p class="edu-location"><i class="ph-fill ph-map-pin"></i> {e.location}</p>}
							{e.grade && <p class="edu-grade"><i class="ph-fill ph-medal"></i> Grade: {e.grade}</p>}
							{e.activities && <p class="edu-activities"><i class="ph-fill ph-users"></i> {e.activities}</p>}
						</div>
					))}
				</div>
			</section>

			<!-- ── Certifications ────────────────────────────────────── -->
			<section class="section" id="certifications">
				<h2>Certifications</h2>
				<div class="cert-list">
					{certifications.map(c => (
						<div class="cert-item">
							<div class="cert-row">
								<span class="cert-name"><i class="ph-fill ph-seal-check"></i> {c.name}</span>
								<span class="cert-date">{c.date}</span>
							</div>
							<div class="cert-meta">
								<span class="cert-issuer">{c.issuer}</span>
								{c.credentialId && <span class="cert-id">ID: {c.credentialId}</span>}
								{c.url && <a class="cert-link" href={c.url} target="_blank" rel="noopener">Show credential <i class="ph-fill ph-arrow-up-right"></i></a>}
							</div>
						</div>
					))}
				</div>
			</section>

			<!-- ── Languages ─────────────────────────────────────────── -->
			<section class="section" id="languages">
				<h2>Languages</h2>
				<div class="lang-list">
					{languages.map(l => (
						<div class="lang-item">
							<div class="lang-info">
								<span class="lang-name">{l.lang}</span>
								<span class="lang-level">{l.level}</span>
							</div>
							<div class="lang-dots">
								{Array.from({length: 5}).map((_, i) => (
									<span class={`lang-dot${i < l.dots ? ' filled' : ''}`}></span>
								))}
							</div>
						</div>
					))}
				</div>
			</section>

		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 760px;
		width: 100%;
		box-sizing: border-box;
		margin: 0 auto;
		padding: 2em 1.5em 4em;
	}

	/* ── Bio ───────────────────────────────────────────── */
	.bio-section {
		padding: 4em 0 2.5em;
		border-bottom: 1px solid rgb(var(--gray-light));
	}

	.bio-section p {
		color: rgb(var(--gray));
		max-width: 560px;
	}
	.contact-links {
		display: flex;
		flex-wrap: wrap;
		gap: 1em;
		margin-top: 1.5em;
	}
	.contact-links a {
		display: flex;
		align-items: center;
		gap: 0.35em;
		font-size: 0.9em;
		font-weight: 600;
		color: var(--accent);
		text-decoration: none;
	}
	.contact-links a:hover { text-decoration: none; }
	.contact-links a i { font-size: 1.1rem; }

	/* ── Sections ────────────────────────────────────────── */
	.section {
		padding: 2.5em 0;
		border-bottom: 1px solid rgb(var(--gray-light));
	}
	.section:last-child { border-bottom: none; }
	.section h2 {
		font-size: 1.3em;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.06em;
		color: rgb(var(--gray));
		margin: 0 0 1.2em;
	}

	/* ── Skills ────────────────────────────────────────── */
	.skills-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6em;
	}
	.skill-tag {
		background: rgb(var(--gray-light));
		color: rgb(var(--gray-dark));
		padding: 0.35em 0.85em;
		border-radius: 999px;
		font-size: 0.88em;
		font-weight: 500;
	}

	/* ── Experience ──────────────────────────────────────── */
	.exp-list { display: flex; flex-direction: column; gap: 1.2em; }
	.exp-item {
		border-left: 3px solid var(--accent);
		padding-left: 1em;
	}
	.exp-row {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		flex-wrap: wrap;
		gap: 0.5em;
	}
	.exp-row strong { font-size: 1em; }
	.exp-company a {
		color: var(--accent);
		text-decoration: none;
		font-weight: 600;
	}
	.exp-company a:hover { text-decoration: none; }
	.exp-meta { font-size: 0.85em; color: rgb(var(--gray)); white-space: nowrap; }
	.exp-location {
		margin: 0.2em 0 0;
		font-size: 0.85em;
		color: rgb(var(--gray));
		display: flex;
		align-items: center;
		gap: 0.25em;
	}

	/* ── Projects ────────────────────────────────────────── */
	.projects-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.2em;
	}
	.project-card {
		border: 1px solid rgb(var(--gray-light));
		border-radius: 10px;
		padding: 1.25em 1.25em 1em;
		display: flex;
		flex-direction: column;
		gap: 0.5em;
	}
	.project-card h3 { font-size: 1em; font-weight: 700; margin: 0; }
	.project-card-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		flex-wrap: wrap;
		gap: 0.4em;
	}
	.project-period { font-size: 0.78em; color: rgb(var(--gray)); white-space: nowrap; }
	.project-card p {
		font-size: 0.88em;
		color: rgb(var(--gray));
		margin: 0;
		line-height: 1.5;
		flex: 1;
	}
	.tech-tags { display: flex; flex-wrap: wrap; gap: 0.4em; }
	.tech-tag {
		font-size: 0.76em;
		padding: 0.2em 0.6em;
		background: rgba(var(--gray-light), 0.8);
		border-radius: 4px;
		color: rgb(var(--gray));
	}
	.project-links {
		display: flex;
		gap: 0.75em;
		font-size: 0.85em;
		font-weight: 600;
		margin-top: 0.25em;
	}
	.project-links a { color: var(--accent); text-decoration: none; }
	.project-links a:hover { text-decoration: none; }

	/* ── Education ────────────────────────────────────────── */
	.edu-list { display: flex; flex-direction: column; gap: 1.2em; }
	.edu-item {
		border-left: 3px solid var(--accent);
		padding-left: 1em;
	}
	.edu-row {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		flex-wrap: wrap;
		gap: 0.5em;
	}
	.edu-row strong { font-size: 1em; }
	.edu-year { font-size: 0.85em; color: rgb(var(--gray)); }
	.edu-item p { margin: 0.2em 0 0; font-size: 0.9em; color: rgb(var(--gray)); }
	.edu-degree { font-weight: 600; color: rgb(var(--gray-dark)) !important; }
	.edu-subjects { font-style: italic; }
	.edu-location, .edu-grade, .edu-activities {
		display: flex;
		align-items: center;
		gap: 0.3em;
	}

	/* ── Certifications ─────────────────────────────────────── */
	.cert-list { display: flex; flex-direction: column; gap: 0.75em; }
	.cert-item {
		border-bottom: 1px solid rgb(var(--gray-light));
		padding-bottom: 0.75em;
	}
	.cert-item:last-child { border-bottom: none; padding-bottom: 0; }
	.cert-row {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		flex-wrap: wrap;
		gap: 0.5em;
	}
	.cert-name {
		display: flex;
		align-items: center;
		gap: 0.35em;
		font-weight: 600;
		font-size: 0.92em;
		color: rgb(var(--black));
	}
	.cert-date { font-size: 0.82em; color: rgb(var(--gray)); white-space: nowrap; }
	.cert-meta {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 0.75em;
		margin-top: 0.15em;
	}
	.cert-issuer { font-size: 0.85em; color: rgb(var(--gray)); }
	.cert-id { font-size: 0.78em; color: rgb(var(--gray)); font-family: monospace; }
	.cert-link { font-size: 0.82em; font-weight: 600; color: var(--accent); text-decoration: none; }
	.cert-link:hover { text-decoration: none; }

	/* ── Languages ──────────────────────────────────────────── */
	.lang-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}
	.lang-item {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0.7em 0;
		border-bottom: 1px solid rgb(var(--gray-light));
	}
	.lang-item:last-child { border-bottom: none; }
	.lang-info {
		display: flex;
		align-items: baseline;
		gap: 0.75em;
	}
	.lang-name { font-weight: 600; font-size: 0.95em; color: rgb(var(--black)); }
	.lang-level { font-size: 0.78em; color: rgb(var(--gray)); }
	.lang-dots {
		display: flex;
		gap: 5px;
	}
	.lang-dot {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background: rgb(var(--gray-light));
		border: 1.5px solid rgb(var(--gray));
	}
	.lang-dot.filled {
		background: var(--accent);
		border-color: var(--accent);
	}

	@media (max-width: 600px) {
		main { padding: 1.5em 1em 3em; }
		.bio-section { padding: 2.5em 0 2em; }
		.bio-section h1 { font-size: 2.2em; }
		.projects-grid { grid-template-columns: 1fr; }
		.exp-row { flex-direction: column; gap: 0.2em; }
		.edu-row { flex-direction: column; gap: 0.2em; }
	}
	@media (max-width: 400px) {
		.bio-section h1 { font-size: 1.9em; }
		.contact-links { gap: 0.75em; }
	}
</style>
