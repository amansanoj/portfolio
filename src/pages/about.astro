		url: 'https://www.canva.com/design-school/certification-award/cf8a77fa-c52a-47c4-9372-dbe6b326ba53',
	},
	{
		name: 'Rat Tickling Certification Course',
		issuer: 'Purdue University',
		date: 'Feb 2026',
		credentialId: '',
		url: '',
	},
	{
		name: 'High-Performance Leadership: Lessons from Formula 1®',
		issuer: 'Santander Open Academy',
		date: 'Aug 2025',
		credentialId: 'OA-2025-0806001542051',
		url: '',
	},
	{
		name: 'Data Science and AI',
		issuer: 'Indian Institute of Technology, Madras',
		date: 'Jan 2025',
		credentialId: '',
		url: '',
	},
	{
		name: 'Python (Basic)',
		issuer: 'HackerRank',
		date: 'Jun 2025',
		credentialId: '75D074F8EF75',
		url: 'https://www.hackerrank.com/certificates/75D074F8EF75',
	},
	{
		name: 'Node (Basic)',
		issuer: 'HackerRank',
