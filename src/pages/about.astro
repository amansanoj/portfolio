---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { GITHUB_URL, LINKEDIN_URL, EMAIL, RESUME_URL } from '../consts';
import { getCollection } from 'astro:content';

const skills = [
	'Python', 'JavaScript', 'React.js', 'Node.js',
	'Responsive Web Design', 'Machine Learning', 'Data Science',
	'Artificial Intelligence', 'Database Development',
	'Data Visualization', 'Brand Management', 'Strategic Thinking',
	'Ethical AI Governance',
];

const experience = [
	{
		role: 'Co-Founder',
		company: 'Falak.me',
		url: 'https://falak.me',
		location: 'Dubai, United Arab Emirates',
		period: 'Jan 2025 – Present',
	},
];

const projects = await getCollection('projects');

const education = [
	{
		school: 'GEMS Our Own Indian School',
		degree: 'Senior School Certificate (CBSE)',
		subjects: 'Physics, Chemistry, Math, Computer Science, English',
		year: 'April 2024 – Mar 2026',
		location: 'Dubai',
		grade: '83.4% (Predicted)',
		activities: 'Innovation and Coding Team',
	},
	{
		school: 'Bhavans Pearl Wisdom School',
		degree: 'Secondary School Certificate (CBSE)',
		subjects: 'Science, Mathematics, Social Science, French, English',
		year: 'Jan 2023 – Mar 2024',
		location: 'Al Ain',
		grade: '94.2%',
		activities: 'Anti Bullying Cadet',
	},
];

const certifications = [
	{
		name: 'IS-66: Preparing the Nation for Space Weather Events',
		issuer: 'FEMA',
		date: 'Feb 2026',
		credentialId: '',
		url: '',
	},
	{
		name: 'Work Smarter with AI',
		issuer: 'Canva',
		date: 'Feb 2026',
		credentialId: 'd71ebd',
		url: 'https://www.canva.com/design-school/certification-award/d71ebdf4-3d4e-47c7-b4bf-e10bf07b44d0',
	},
	{
		name: 'Canva for Work',
		issuer: 'Canva',
		date: 'Feb 2026',
		credentialId: 'cf8a77',
		url: 'https://www.canva.com/design-school/certification-award/cf8a77fa-c52a-47c4-9372-dbe6b326ba53',
	},
	{
		name: 'Rat Tickling Certification Course',
		issuer: 'Purdue University',
		date: 'Feb 2026',
		credentialId: '',
		url: '',
	},
	{
		name: 'High-Performance Leadership: Lessons from Formula 1®',
		issuer: 'Santander Open Academy',
		date: 'Aug 2025',
		credentialId: 'OA-2025-0806001542051',
		url: '',
	},
	{
		name: 'Data Science and AI',
		issuer: 'Indian Institute of Technology, Madras',
		date: 'Jan 2025',
		credentialId: '',
		url: '',
	},
	{
		name: 'Python (Basic)',
		issuer: 'HackerRank',
		date: 'Jun 2025',
		credentialId: '75D074F8EF75',
		url: 'https://www.hackerrank.com/certificates/75D074F8EF75',
	},
	{
		name: 'Node (Basic)',
		issuer: 'HackerRank',
		date: 'Aug 2023',
		credentialId: 'B527527F95E4',
		url: 'https://www.hackerrank.com/certificates/B527527F95E4',
	},
	{
		name: 'JavaScript (Basic)',
		issuer: 'HackerRank',
		date: 'Aug 2023',
		credentialId: '556FB6FA14D4',
		url: 'https://www.hackerrank.com/certificates/556FB6FA14D4',
	},
];

const languages = [
	{ lang: 'English', level: 'Bilingual', dots: 5 },
	{ lang: 'Malayalam', level: 'Native', dots: 5 },
	{ lang: 'Hindi', level: 'Proficient', dots: 4 },
	{ lang: 'French', level: 'Basic', dots: 2 },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="About - Aman Sanoj" description="Developer & Student based in Dubai." image="/og-home.png" />
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1" class="w-full max-w-[760px] box-border mx-auto px-[1.5em] pt-[2em] pb-[4em]">

			<!-- ── Bio ─────────────────────────────────────────────── -->
			<section class="bio-section pt-[4em] pb-[2.5em] border-b border-[var(--c-border)]">
				<h1 class="text-5xl">About Me</h1>
				<p class="text-[var(--c-text-muted)] max-w-[560px]">
					Hey, I'm Aman - a developer and student who enjoys building things for the web.
					I'm currently studying and working on personal projects that keep me learning.
				</p>
				<p class="text-[var(--c-text-muted)] max-w-[560px]">
					I care about writing clean, readable code and I'm always looking to pick up new skills.
					When I'm not coding, I write about what I'm learning on my blog.
				</p>
				<div class="flex flex-wrap gap-4 mt-6">
					<a href={GITHUB_URL} target="_blank" rel="noopener" class="no-underline flex items-center gap-[0.35em] text-[0.9em] text-[var(--c-text-muted)] hover:text-[var(--c-text)] transition-colors duration-150"><i class="ph-fill ph-github-logo text-[1.1rem]"></i> GitHub</a>
					<a href={LINKEDIN_URL} target="_blank" rel="noopener" class="no-underline flex items-center gap-[0.35em] text-[0.9em] text-[var(--c-text-muted)] hover:text-[var(--c-text)] transition-colors duration-150"><i class="ph-fill ph-linkedin-logo text-[1.1rem]"></i> LinkedIn</a>
					<a href={`mailto:${EMAIL}`} class="no-underline flex items-center gap-[0.35em] text-[0.9em] text-[var(--c-text-muted)] hover:text-[var(--c-text)] transition-colors duration-150"><i class="ph-fill ph-envelope-simple text-[1.1rem]"></i> Email</a>
					<a href={RESUME_URL} download class="no-underline flex items-center gap-[0.35em] text-[0.9em] text-[var(--c-text-muted)] hover:text-[var(--c-text)] transition-colors duration-150"><i class="ph-fill ph-file-arrow-down text-[1.1rem]"></i> Resume</a>
				</div>
			</section>

			<!-- ── Skills ───────────────────────────────────────────── -->
			<section class="section" id="skills">
				<h2>Skills</h2>
				<div class="flex flex-wrap gap-[0.6em]">
					{skills.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</section>

			<!-- ── Experience ───────────────────────────────────────── -->
			<section class="section" id="experience">
				<h2>Experience</h2>
				<div class="flex flex-col gap-[1.2em]">
					{experience.map(e => (
						<div class="border-l-[3px] border-[var(--c-accent)] pl-4">
							<div class="exp-row flex justify-between items-baseline flex-wrap gap-2">
								<div>
									<strong>{e.role}</strong>
									<span class="exp-company">
										&nbsp;-&nbsp;
										{e.url && <a href={e.url} target="_blank" rel="noopener">{e.company} <i class="ph-fill ph-arrow-up-right"></i></a>}
										{!e.url && e.company}
									</span>
								</div>
								<span class="text-[0.85em] text-[var(--c-text-muted)] whitespace-nowrap">{e.period}</span>
							</div>
							<p class="mt-[0.2em] mb-0 text-[0.85em] text-[var(--c-text-muted)] flex items-center gap-1"><i class="ph-fill ph-map-pin"></i> {e.location}</p>
						</div>
					))}
				</div>
			</section>

			<!-- ── Projects ───────────────────────────────────────────── -->
			<section class="section" id="projects">
				<h2>Projects</h2>
				<div class="grid grid-cols-1 gap-[1.2em]">
					{projects.map(p => (
						<div class="border border-[var(--c-border)] rounded-[10px] px-[1.25em] pt-[1.25em] pb-4 flex flex-col gap-2">
							<div class="flex justify-between items-baseline flex-wrap gap-[0.4em]">
								<h3 class="text-[1em] m-0">{p.data.title}</h3>
								{p.data.period && <span class="text-[0.78em] text-[var(--c-text-muted)] whitespace-nowrap">{p.data.period}</span>}
							</div>
							<p class="text-[0.88em] text-[var(--c-text-muted)] m-0 leading-[1.5] flex-1">{p.data.description}</p>
							<div class="flex flex-wrap gap-[0.4em]">
								{p.data.tags.map((t: string) => <span class="text-[0.76em] px-[0.6em] py-[0.2em] bg-[var(--c-surface)] rounded text-[var(--c-text-muted)]">{t}</span>)}
							</div>
							<div class="project-links flex gap-[0.75em] text-[0.85em] mt-1">
								{p.data.github && <a href={p.data.github} target="_blank" rel="noopener">GitHub <i class="ph-fill ph-arrow-up-right"></i></a>}
								{p.data.live && <a href={p.data.live} target="_blank" rel="noopener">Live <i class="ph-fill ph-arrow-up-right"></i></a>}
								<a href={`/projects/${p.id}`}>Read More <i class="ph-fill ph-arrow-right"></i></a>
							</div>
						</div>
					))}
				</div>
			</section>

			<!-- ── Education ───────────────────────────────────────────── -->
			<section class="section" id="education">
				<h2>Education</h2>
				<div class="flex flex-col gap-[1.2em]">
					{education.map(e => (
						<div class="border-l-[3px] border-[var(--c-accent)] pl-4">
							<div class="edu-row flex justify-between items-baseline flex-wrap gap-2">
								<strong>{e.school}</strong>
								<span class="text-[0.85em] text-[var(--c-text-muted)]">{e.year}</span>
							</div>
							<p class="mt-[0.2em] mb-0 text-[0.9em] text-[var(--c-text)]">{e.degree}</p>
							<p class="mt-[0.2em] mb-0 text-[0.9em] text-[var(--c-text-muted)] italic">{e.subjects}</p>
							{e.location && <p class="mt-[0.2em] mb-0 text-[0.9em] text-[var(--c-text-muted)] flex items-center gap-[0.3em]"><i class="ph-fill ph-map-pin"></i> {e.location}</p>}
							{e.grade && <p class="mt-[0.2em] mb-0 text-[0.9em] text-[var(--c-text-muted)] flex items-center gap-[0.3em]"><i class="ph-fill ph-medal"></i> Grade: {e.grade}</p>}
							{e.activities && <p class="mt-[0.2em] mb-0 text-[0.9em] text-[var(--c-text-muted)] flex items-center gap-[0.3em]"><i class="ph-fill ph-users"></i> {e.activities}</p>}
						</div>
					))}
				</div>
			</section>

			<!-- ── Certifications ────────────────────────────────────── -->
			<section class="section" id="certifications">
				<h2>Certifications</h2>
				<div class="flex flex-col gap-3">
					{certifications.map(c => (
						<div class="border-b border-[var(--c-border)] pb-3 last:border-b-0 last:pb-0">
							<div class="flex justify-between items-baseline flex-wrap gap-2">
								<span class="flex items-center gap-[0.35em] text-[0.92em] text-[var(--c-text-strong)]"><i class="ph-fill ph-seal-check"></i> {c.name}</span>
								<span class="text-[0.82em] text-[var(--c-text-muted)] whitespace-nowrap">{c.date}</span>
							</div>
							<div class="flex flex-wrap items-center gap-3 mt-[0.15em]">
								<span class="text-[0.85em] text-[var(--c-text-muted)]">{c.issuer}</span>
								{c.credentialId && <span class="text-[0.78em] text-[var(--c-text-muted)] font-mono">ID: {c.credentialId}</span>}
								{c.url && <a class="cert-link text-[0.82em]" href={c.url} target="_blank" rel="noopener">Show credential <i class="ph-fill ph-arrow-up-right"></i></a>}
							</div>
						</div>
					))}
				</div>
			</section>

			<!-- ── Languages ─────────────────────────────────────────── -->
			<section class="section" id="languages">
				<h2>Languages</h2>
				<div class="flex flex-col">
					{languages.map(l => (
						<div class="flex items-center justify-between py-[0.7em] border-b border-[var(--c-border)] last:border-b-0">
							<div class="flex items-baseline gap-3">
								<span class="text-[0.95em] text-[var(--c-text-strong)]">{l.lang}</span>
								<span class="text-[0.78em] text-[var(--c-text-muted)]">{l.level}</span>
							</div>
							<div class="flex gap-[5px]">
								{Array.from({length: 5}).map((_, i) => (
									<span class={`w-2 h-2 rounded-full border-[1.5px] ${i < l.dots ? 'bg-[var(--c-warm)] border-[var(--c-warm)]' : 'bg-[var(--c-surface)] border-[var(--c-text-muted)]'}`}></span>
								))}
							</div>
						</div>
					))}
				</div>
			</section>

		</main>
		<Footer />
	</body>
</html>

<style>
	/* max-width responsive overrides - Tailwind is mobile-first */
	@media (max-width: 600px) {
		main { padding: 1.5em 1em 3em; }
		.bio-section { padding-top: 2.5em; padding-bottom: 2em; }
		.bio-section h1 { font-size: 2.2em; }
		.exp-row, .edu-row { flex-direction: column; gap: 0.2em; }
	}
	@media (max-width: 400px) {
		.bio-section h1 { font-size: 1.9em; }
	}
</style>
