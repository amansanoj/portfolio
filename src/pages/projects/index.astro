---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const MONTHS: Record<string, number> = { Jan:0, Feb:1, Mar:2, Apr:3, May:4, Jun:5, Jul:6, Aug:7, Sep:8, Oct:9, Nov:10, Dec:11 };
function periodEnd(period: string): number {
	const end = period.split('â€“').pop()!.trim();
	const [mon, yr] = end.split(' ');
	return new Date(parseInt(yr), MONTHS[mon]).getTime();
}
const projects = (await getCollection('projects')).sort(
	(a, b) => periodEnd(b.data.period) - periodEnd(a.data.period)
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Projects - Aman Sanoj" description="Things I've built - case studies and side projects." image="/og-home.png" />
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1" class="w-full max-w-[900px] box-border mx-auto px-[1.5em] pt-[2em] pb-[4em]">
			<ul class="post-grid">
				{projects.map((p, index) => (
					<li>
						<a href={`/projects/${p.id}/`}>
							{p.data.heroImage
								? <img 
									width={720} 
									height={360} 
									src={p.data.heroImage} 
									alt="" 
									loading={index === 0 ? "eager" : "lazy"}
									fetchpriority={index === 0 ? "high" : "auto"}
									decoding="async"
								/>
								: <div class="w-full aspect-[2/1] bg-[var(--c-surface)] rounded-xl flex items-center justify-center text-[3rem] text-[var(--c-accent)] mb-2"><i class="ph-fill ph-code"></i></div>
							}
							<h4 class="title text-xl">{p.data.title}</h4>
							<p class="date">{p.data.period}</p>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>

<style>
	@media (max-width: 480px) {
		main { padding: 1.5em 1em 3em; }
	}
</style>
