---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort(
	(a, b) => a.data.title.localeCompare(b.data.title)
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Projects — Aman Sanoj" description="Things I've built — case studies and side projects." image="/og-home.png" />
		<style>
			main {
				width: 100%;
				max-width: 900px;
				box-sizing: border-box;
				margin: 0 auto;
				padding: 2em 1.5em 4em;
			}
			@media (max-width: 480px) {
				main { padding: 1.5em 1em 3em; }
			}
			.placeholder {
				width: 100%;
				aspect-ratio: 2/1;
				background: var(--c-surface);
				border-radius: 12px;
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 3rem;
				color: var(--c-accent);
				margin-bottom: 0.5rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main id="main-content" tabindex="-1">
			<ul class="post-grid">
				{projects.map((p, index) => (
					<li>
						<a href={`/projects/${p.id}/`}>
							{p.data.heroImage
								? <img 
									width={720} 
									height={360} 
									src={p.data.heroImage} 
									alt="" 
									loading={index === 0 ? "eager" : "lazy"}
									fetchpriority={index === 0 ? "high" : "auto"}
									decoding="async"
								/>
								: <div class="placeholder"><i class="ph-fill ph-code"></i></div>
							}
							<h4 class="title">{p.data.title}</h4>
							<p class="date">{p.data.period}</p>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
