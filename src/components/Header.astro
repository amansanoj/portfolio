---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, GITHUB_URL, LINKEDIN_URL, EMAIL } from '../consts';
---

<header>
	<nav>
		<a href="/" class="wordmark">{SITE_TITLE}</a>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href={GITHUB_URL} target="_blank" rel="noopener" aria-label="GitHub">
				<i class="ph-fill ph-github-logo"></i>
			</a>
			<a href={LINKEDIN_URL} target="_blank" rel="noopener" aria-label="LinkedIn">
				<i class="ph-fill ph-linkedin-logo"></i>
			</a>
			<a href={`mailto:${EMAIL}`} aria-label="Email">
				<i class="ph-fill ph-envelope-simple"></i>
			</a>
			<button id="theme-toggle" aria-label="Toggle dark mode">
				<i id="theme-icon" class="ph-fill ph-moon"></i>
			</button>
			<button id="accessibility-btn" aria-label="Accessibility options">
				<i class="ph-fill ph-person-arms-spread"></i>
			</button>
		</div>
	</nav>
</header>
<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		margin: 0;
		padding: 0 2em;
		width: 100%;
		box-sizing: border-box;
		background: rgb(var(--header-bg));
		border-bottom: 1px solid rgb(var(--gray-light));
		transition: background-color 0.2s;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 72px;
		max-width: 900px;
		margin: 0 auto;
	}
	.wordmark {
		font-size: 1.2rem;
		font-weight: 700;
		letter-spacing: -0.01em;
		color: rgb(var(--black));
		text-decoration: none;
		white-space: nowrap;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.25em;
		overflow: hidden;
	}
	.social-links {
		display: flex;
		align-items: center;
		gap: 0.1em;
	}
	.social-links a,
	#theme-toggle,
	#accessibility-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 42px;
		height: 42px;
		border-radius: 6px;
		color: rgb(var(--gray));
		text-decoration: none;
		transition: background 0.15s, color 0.15s;
	}
	.social-links a:hover,
	#theme-toggle:hover,
	#accessibility-btn:hover {
		background: rgb(var(--gray-light));
		color: rgb(var(--black));
	}
	.social-links a i,
	#theme-toggle i,
	#accessibility-btn i {
		font-size: 1.45rem;
	}
	#theme-toggle,
	#accessibility-btn {
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
	}
	@media (max-width: 600px) {
		header { padding: 0 1em; }
		.social-links a { display: none; }
		.wordmark { font-size: 1.05rem; }
	}
	@media (max-width: 400px) {
		nav { height: 58px; }
		.wordmark { font-size: 0.95rem; }
		#theme-toggle { width: 34px; height: 34px; }
	}
</style>

<script>
	const toggle = document.getElementById('theme-toggle');
	const icon = document.getElementById('theme-icon');

	function setIcon(theme: string) {
		if (icon) icon.className = theme === 'dark' ? 'ph-fill ph-sun' : 'ph-fill ph-moon';
	}

	// Sync icon with current theme on load
	setIcon(document.documentElement.getAttribute('data-theme') || 'light');

	toggle?.addEventListener('click', () => {
		const next = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
		document.documentElement.setAttribute('data-theme', next);
		localStorage.setItem('theme', next);
		setIcon(next);
	});
</script>
