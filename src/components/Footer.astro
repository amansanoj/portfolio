---
import { GITHUB_URL, LINKEDIN_URL, EMAIL } from '../consts';
const today = new Date();
---

<footer role="contentinfo" class="pt-[2em] px-[1em] pb-[4em] bg-[var(--c-bg)] border-t border-[var(--c-border)] text-[var(--c-text-muted)] text-center transition-colors duration-200">
	&copy; {today.getFullYear()} Aman Sanoj
	<div class="flex justify-center gap-4 mt-4">
		<a href={GITHUB_URL} target="_blank" rel="noopener" aria-label="GitHub" class="no-underline text-[var(--c-text-muted)] flex items-center hover:text-[var(--c-text)] transition-colors duration-150">
			<i class="ph-fill ph-github-logo text-[1.4rem]"></i>
		</a>
		<a href={LINKEDIN_URL} target="_blank" rel="noopener" aria-label="LinkedIn" class="no-underline text-[var(--c-text-muted)] flex items-center hover:text-[var(--c-text)] transition-colors duration-150">
			<i class="ph-fill ph-linkedin-logo text-[1.4rem]"></i>
		</a>
		<a href={`mailto:${EMAIL}`} aria-label="Email" class="no-underline text-[var(--c-text-muted)] flex items-center hover:text-[var(--c-text)] transition-colors duration-150">
			<i class="ph-fill ph-envelope-simple text-[1.4rem]"></i>
		</a>
		<a href="/rss.xml" aria-label="RSS Feed" class="no-underline text-[var(--c-text-muted)] flex items-center hover:text-[var(--c-text)] transition-colors duration-150">
			<i class="ph-fill ph-rss text-[1.4rem]"></i>
		</a>
	</div>
</footer>
