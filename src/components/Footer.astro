---
import { GITHUB_URL, LINKEDIN_URL, EMAIL } from '../consts';
const today = new Date();
---

<footer role="contentinfo">
	&copy; {today.getFullYear()} Aman Sanoj
	<div class="social-links">
		<a href={GITHUB_URL} target="_blank" rel="noopener" aria-label="GitHub">
			<i class="ph-fill ph-github-logo"></i>
		</a>
		<a href={LINKEDIN_URL} target="_blank" rel="noopener" aria-label="LinkedIn">
			<i class="ph-fill ph-linkedin-logo"></i>
		</a>
		<a href={`mailto:${EMAIL}`} aria-label="Email">
			<i class="ph-fill ph-envelope-simple"></i>
		</a>
		<a href="/rss.xml" aria-label="RSS Feed">
			<i class="ph-fill ph-rss"></i>
		</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
	background-color: var(--c-bg);
	border-top: 1px solid var(--c-border);
	color: var(--c-text-muted);
		text-align: center;
		transition: background-color 0.2s;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--c-text-muted);
		display: flex;
		align-items: center;
	}
	.social-links a i {
		font-size: 1.4rem;
	}
	.social-links a:hover {
		color: var(--c-text);
	}
</style>
