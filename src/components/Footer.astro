---
import { GITHUB_URL, LINKEDIN_URL, EMAIL } from '../consts';
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Aman Sanoj
	<div class="social-links">
		<a href={GITHUB_URL} target="_blank" rel="noopener" aria-label="GitHub">
			<i class="ph-fill ph-github-logo"></i>
		</a>
		<a href={LINKEDIN_URL} target="_blank" rel="noopener" aria-label="LinkedIn">
			<i class="ph-fill ph-linkedin-logo"></i>
		</a>
		<a href={`mailto:${EMAIL}`} aria-label="Email">
			<i class="ph-fill ph-envelope-simple"></i>
		</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
		background-color: rgb(var(--header-bg));
		border-top: 1px solid rgb(var(--gray-light));
		color: rgb(var(--gray));
		text-align: center;
		transition: background-color 0.2s;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
		display: flex;
		align-items: center;
	}
	.social-links a i {
		font-size: 1.4rem;
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>
